<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">
    <FrameLayout
        android:id="@+id/forgotpasswordFrame"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:src="@drawable/button_background"
            android:scale="fitXY"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginLeft="25dp"
            android:padding="22dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="My Shop"
            android:textColor="#ffff"
            android:textSize="45dp"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="35"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tvForgotpassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/forgotpasswordFrame"
    android:layout_marginTop="30dp"
        android:text ="FORGOT PASSWORD?"
       android:layout_marginLeft="90dp"
        android:textSize="25sp"
        android:textColor="#020202"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvForgotpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap-content"
        android:layout_marginTop="10dp"
        android:text="Enter your name and e-mail address"
       android:layout_marginLeft="60dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotpassword1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvForgotpassword3"
        android:layout_width="match_parent"
        android:layout_height="wrap-content"
        android:layout_marginTop="10dp"
        android:text="Well's send you a email to reset your "
        android:layout_marginLeft="60dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotpassword2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvForgotpassword4"
        android:layout_width="match_parent"
        android:layout_height="wrap-content"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:layout_marginLeft="150dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotpassword3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/tvForgotpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotpassword4"
        android:layout_margin="20"/>
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotpassword"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/button_background" />
        <TextView
            android:id="@+id/tvRegistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="12dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="25dp" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>